{
  "manifest_version": 3,
  "name": "VBTV video controls",
  "version": "1.0.0",
  "description": "This extension adds keyboard video control support to VBTV",
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["https://tv.volleyballworld.com/player*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "128": "icon-128.png"
  },
  "permissions": ["storage", "scripting", "activeTab"]
}
